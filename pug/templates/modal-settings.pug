ion-modal-view
  ion-header-bar.bar-settings
    i.icon.ion-close-circled(style='font-size:20px;',ng-click='closeModal($event)')
    h1.title Settings
  ion-content.padding.scroll-modal
    form(name='settingsForm', novalidate='', ng-submit='saveSettings(settingsForm)')
      .list.form-signin
        label.item.item-input.item-label
          span.input-label Server
          input(type='text', placeholder='{{settings.server}}', ng-model='settings.server')
        label.item.item-input.item-label
          span.input-label Port
          input(type='text', placeholder='{{settings.port}}', ng-model='settings.port')
        .button-bar
          button.button.button-positive(type='submit')
            | Save
          button.button.button-positive(ng-click='cancelSettings()')
            | Cancel
